
.root
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  border-radius 6px
  background lighten(#F5F4F3, 40%)
  border 1px solid darken(#F5F4F3, 30%)
  overflow-y auto
  box-shadow 0 2px 8px rgba(black, 10%)

.title
  text-align center
  padding 8px 16px 12px
  background linear-gradient(to bottom, darken(#F5F4F3, 18%), darken(#F5F4F3, 30%))
  color white
  font-weight bold
  text-shadow 0 1px 2px rgba(black, 0.7)

.sectionTitle
  margin 16px 0 0
  padding 4px 12px
  background darken(#F5F4F3, 10%)
  font-weight bold
  font-size 0.9em
  color darken(#F5F4F3, 64%)

.title + .sectionTitle
  margin-top 0
