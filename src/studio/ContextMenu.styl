.root
  display block
  overflow hidden
  background white
  margin 0
  border-radius 4px
  border 1px solid darken(#f5f4f3, 10%)
  background white
  padding 0
  list-style none
  box-shadow 0 2px 5px rgba(black, 20%)
  > li
    > a
      padding 6px 12px
      display block
      text-decoration none
      &:hover
        background darken(#f5f4f3, 42%)
        color white
