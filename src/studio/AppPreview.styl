
.root
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  border-right 1px solid darken(#F0EFEE, 10%)
  overflow-y auto

.content
  position relative
  overflow hidden
  min-height 100%

.backdrop
  position absolute
  top 0
  right 360px
  bottom 0
  left 0
  background white
  border-right 1px solid darken(#F0EFEE, 10%)

.group
  position relative

.groupLabel
  position absolute
  right 368px
  top 50%
  transform translateY(-50%)
  color rgba(#000, 50%)
  font-size 0.9rem

.groupContent
  margin 0 0 0 auto
  width 360px

.newControl
  text-align center
  padding 24px 16px
  border-top 1px solid darken(#F0EFEE, 10%)
  background darken(#F0EFEE, 5%)
  > button
    border-radius 32px
    background lighten(#F0EFEE, 50%)
    font-size 1.6rem
    padding 6px 24px
    border 1px solid darken(#F0EFEE, 20%)
    box-shadow 0 2px 8px rgba(black, 0.2)
    transition 0.2s background, 0.2s border-color, 0.2s transform
    outline none
    &:focus
      background darken(#F0EFEE, 5%)
      border-color darken(#F0EFEE, 30%)
    &:hover
      background lighten(#F0EFEE, 80%)
      border-color darken(#F0EFEE, 30%)
    &:active
      transform scale(0.95)
      background darken(#F0EFEE, 20%)
      border-color darken(#F0EFEE, 30%)

.draggableWidget
  cursor move
  > .widget
    pointer-events none
  &.isDragging
    opacity 0.25

.dropHint
  background #3949ab
  position absolute
  display none
  box-sizing border-box
  z-index 9999999
  &.isHorizontal
    display block
    transform translateY(-50%)
    right 0
    height 3px
    width 360px
    border-radius 3px
    box-shadow 0 0 3px white
