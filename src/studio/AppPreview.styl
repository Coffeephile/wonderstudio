
.root
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  border-right 1px solid darken(#F0EFEE, 10%)

.backdrop
  position absolute
  top 0
  right 360px
  bottom 0
  left 0
  background white
  border-right 1px solid darken(#F0EFEE, 10%)

.group
  position relative
  margin-bottom 8px

.groupLabel
  position absolute
  right 368px
  top 50%
  transform translateY(-50%)
  color rgba(#000, 50%)

.groupContent
  composes font from '../styles/app.styl'
  margin 0 0 0 auto
  width 360px
